{
  "name": "electron-poc",
  "version": "1.2.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "yarn electron:tsc && ng build",
    "build:dev": "yarn build -c dev",
    "build:prod": "yarn build -c production",
    "ng:serve": "ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:tsc && electron . --serve",
    "electron:local": "yarn build:prod && electron .",
    "electron:linux": "yarn build:prod && yarn electron-builder build --linux",
    "electron:windows": "yarn build:prod && yarn electron-builder build --windows",
    "electron:mac": "yarn build:prod && yarn electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.4",
    "@angular/animations": "~7.2.7",
    "@angular/cdk": "~7.3.3",
    "@angular/cli": "7.3.4",
    "@angular/common": "~7.2.7",
    "@angular/compiler": "~7.2.7",
    "@angular/compiler-cli": "~7.2.7",
    "@angular/core": "~7.2.7",
    "@angular/forms": "~7.2.7",
    "@angular/http": "~7.2.7",
    "@angular/language-service": "~7.2.7",
    "@angular/platform-browser": "~7.2.7",
    "@angular/platform-browser-dynamic": "~7.2.7",
    "@angular/router": "~7.2.7",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/jasmine": "~3.3.9",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~10.12.29",
    "codelyzer": "~4.5.0",
    "core-js": "~2.6.5",
    "electron": "4.0.7",
    "electron-builder": "~20.38.5",
    "electron-reload": "~1.4.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.5",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "~1.4.0",
    "ng-zorro-antd": "^7.0.1",
    "npm-run-all": "~4.1.5",
    "npx": "~10.2.0",
    "protractor": "~5.4.2",
    "rxjs": "~6.4.0",
    "ts-node": "~8.0.2",
    "tslint": "~5.13.1",
    "typescript": "~3.2.4",
    "wait-on": "~3.2.0",
    "webdriver-manager": "~12.1.1",
    "zone.js": "~0.8.29"
  }
}
