{
  "name": "electron-poc",
  "version": "1.5.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "yarn electron:tsc && ng build",
    "build:dev": "yarn build -c dev",
    "build:prod": "yarn build -c production",
    "ng:serve": "ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:tsc && electron . --serve",
    "electron:local": "yarn build:prod && electron .",
    "electron:linux": "yarn build:prod && yarn electron-builder build --linux",
    "electron:windows": "yarn build:prod && yarn electron-builder build --windows",
    "electron:mac": "yarn build:prod && yarn electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1000.1",
    "@angular/animations": "~10.0.3",
    "@angular/cdk": "~10.0.1",
    "@angular/cli": "10.0.1",
    "@angular/common": "~10.0.3",
    "@angular/compiler": "~10.0.3",
    "@angular/compiler-cli": "~10.0.3",
    "@angular/core": "~10.0.3",
    "@angular/forms": "~10.0.3",
    "@angular/language-service": "~10.0.3",
    "@angular/platform-browser": "~10.0.3",
    "@angular/platform-browser-dynamic": "~10.0.3",
    "@angular/router": "~10.0.3",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "@types/jasmine": "~3.5.11",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^12.12.48",
    "codelyzer": "^6.0.0",
    "core-js": "~3.6.5",
    "electron": "9.1.0",
    "electron-builder": "~22.7.0",
    "electron-reload": "~1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-zorro-antd": "~9.3.0",
    "npm-run-all": "~4.1.5",
    "npx": "~10.2.2",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.0",
    "ts-node": "~8.10.2",
    "tslint": "~6.1.0",
    "typeface-lora": "^0.0.72",
    "typescript": "~3.9.6",
    "wait-on": "~5.0.3",
    "webdriver-manager": "~12.1.7",
    "zone.js": "~0.10.2"
  }
}
