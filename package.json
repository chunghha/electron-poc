{
  "name": "electron-poc",
  "version": "1.2.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "yarn electron:tsc && ng build",
    "build:dev": "yarn build -c dev",
    "build:prod": "yarn build -c production",
    "ng:serve": "ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:tsc && electron . --serve",
    "electron:local": "yarn build:prod && electron .",
    "electron:linux": "yarn build:prod && yarn electron-builder build --linux",
    "electron:windows": "yarn build:prod && yarn electron-builder build --windows",
    "electron:mac": "yarn build:prod && yarn electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.1",
    "@angular/animations": "~8.1.1",
    "@angular/cdk": "~8.0.2",
    "@angular/cli": "8.1.1",
    "@angular/common": "~8.1.1",
    "@angular/compiler": "~8.1.1",
    "@angular/compiler-cli": "~8.1.1",
    "@angular/core": "~8.1.1",
    "@angular/forms": "~8.1.1",
    "@angular/language-service": "~8.1.1",
    "@angular/platform-browser": "~8.1.1",
    "@angular/platform-browser-dynamic": "~8.1.1",
    "@angular/router": "~8.1.1",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~12.6.2",
    "codelyzer": "~5.1.0",
    "core-js": "~3.1.4",
    "electron": "5.0.6",
    "electron-builder": "~21.0.15",
    "electron-reload": "~1.4.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.5",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "~1.4.2",
    "ng-zorro-antd": "^8.0.2",
    "npm-run-all": "~4.1.5",
    "npx": "~10.2.0",
    "protractor": "~5.4.2",
    "rxjs": "~6.5.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.4.5",
    "wait-on": "~3.3.0",
    "webdriver-manager": "~12.1.5",
    "zone.js": "~0.9.1"
  }
}