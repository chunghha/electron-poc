{
  "name": "electron-poc",
  "version": "2.0.1",
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "yarn electron:tsc && ng build",
    "build:dev": "yarn build -c dev",
    "build:prod": "yarn build -c production",
    "ng:serve": "ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:tsc && electron . --serve",
    "electron:local": "yarn build:prod && electron .",
    "electron:linux": "yarn build:prod && yarn electron-builder build --linux",
    "electron:windows": "yarn build:prod && yarn electron-builder build --windows",
    "electron:mac": "yarn build:prod && yarn electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1102.0",
    "@angular/animations": "~11.2.0",
    "@angular/cdk": "~11.2.0",
    "@angular/cli": "11.2.0",
    "@angular/common": "~11.2.0",
    "@angular/compiler": "~11.2.0",
    "@angular/compiler-cli": "~11.2.0",
    "@angular/core": "~11.2.0",
    "@angular/forms": "~11.2.0",
    "@angular/language-service": "~11.2.0",
    "@angular/platform-browser": "~11.2.0",
    "@angular/platform-browser-dynamic": "~11.2.0",
    "@angular/router": "~11.2.0",
    "@fontsource/lora": "^4.2.1",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^14.14.26",
    "codelyzer": "^6.0.0",
    "core-js": "~3.8.3",
    "electron": "11.2.3",
    "electron-builder": "~22.9.1",
    "electron-reload": "~1.5.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-zorro-antd": "~11.1.0",
    "npm-run-all": "~4.1.5",
    "npx": "~10.2.2",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.3",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.1.5",
    "wait-on": "~5.2.0",
    "webdriver-manager": "~12.1.7",
    "zone.js": "0.11.3"
  }
}
