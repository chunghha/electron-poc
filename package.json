{
  "name": "electron-poc",
  "version": "1.4.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "yarn electron:tsc && ng build",
    "build:dev": "yarn build -c dev",
    "build:prod": "yarn build -c production",
    "ng:serve": "ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:tsc && electron . --serve",
    "electron:local": "yarn build:prod && electron .",
    "electron:linux": "yarn build:prod && yarn electron-builder build --linux",
    "electron:windows": "yarn build:prod && yarn electron-builder build --windows",
    "electron:mac": "yarn build:prod && yarn electron-builder build --mac",
    "test": "ng test",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.901.3",
    "@angular/animations": "~9.1.3",
    "@angular/cdk": "~9.2.1",
    "@angular/cli": "9.1.3",
    "@angular/common": "~9.1.3",
    "@angular/compiler": "~9.1.3",
    "@angular/compiler-cli": "~9.1.3",
    "@angular/core": "~9.1.3",
    "@angular/forms": "~9.1.3",
    "@angular/language-service": "~9.1.3",
    "@angular/platform-browser": "~9.1.3",
    "@angular/platform-browser-dynamic": "~9.1.3",
    "@angular/router": "~9.1.3",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/jasmine": "~3.5.10",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^12.12.37",
    "codelyzer": "^5.1.2",
    "core-js": "~3.6.5",
    "electron": "8.2.3",
    "electron-builder": "~22.5.1",
    "electron-reload": "~1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~5.0.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "~1.5.3",
    "ng-zorro-antd": "~9.0.2",
    "npm-run-all": "~4.1.5",
    "npx": "~10.2.2",
    "protractor": "~5.4.4",
    "rxjs": "~6.5.5",
    "ts-node": "~8.9.0",
    "tslint": "~6.1.1",
    "typeface-lora": "^0.0.72",
    "typescript": "~3.8.3",
    "wait-on": "~4.0.2",
    "webdriver-manager": "~12.1.7",
    "zone.js": "~0.10.2"
  }
}
